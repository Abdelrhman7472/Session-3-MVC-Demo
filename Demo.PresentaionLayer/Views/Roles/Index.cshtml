@model IEnumerable<RoleViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a asp-action="Create" class="btn btn-primary mt-3"> Create New Role</a>

<div class="mt-2">
    <form method="get" asp-action="Index" class="row offset-2">
        <div class="col-10">
            <input class="form-control"  placeholder="Role's Name" name="email" required/>
        </div>
        <div class="col-2">
            <input class="btn btn-info" type="submit" value="Search"/>
        </div>
    </form>


</div>
    <table class="table table-striped table-hover mt-3">
        <thead>

            <tr>    
                <td> @Html.DisplayNameFor(d => d.Id)</td>
                <td> @Html.DisplayNameFor(d => d.Name)</td>
                         


                <td> Detalis</td>
                <td> Edit</td>
                <td> Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td> @item.Id</td>
                    <td> @item.Name</td>
        
                    <td>
                    <partial name="_ButtonsPartialView" Model="@item.Id"></partial>
                    </tr>
            }
            </tbody>
        </table>

