@model Department
@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Name Department Detalis</h1>
<div class="form-group mt-3">
    <label asp-for="Code"></label>
    <input readonly class="form-control" asp-for="Code" />
</div>
<div class="form-group">
    <label asp-for="Name"></label>
    <input readonly class="form-control" asp-for="Name" />

</div>
<div class="form-group">
    <label asp-for="DateOfCreation"></label>
    <input readonly class="form-control" asp-for="DateOfCreation" />
</div>

<div class="mt-3">
    <a class="btn btn-success" asp-action="Index">Back</a>
    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
</div>
