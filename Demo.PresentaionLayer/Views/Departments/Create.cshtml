@model Department
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Department</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Code"></label>
        <input class="form-control" asp-for="Code"/>
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="DateOfCreation"></label>
        <input class="form-control" asp-for="DateOfCreation"/>
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button class="btn btn-success" type="submit">Save</button>
        <a class="btn btn-danger" asp-action="Index">Cancel</a>
    </div>


</form>

